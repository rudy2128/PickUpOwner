<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.employee.EditProfileActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/fifty"
                android:layout_height="@dimen/fifty"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/back"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:backgroundTint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/m_70"
                android:layout_marginEnd="@dimen/twenty"
                android:text="@string/edit_profile"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/m_100"
            android:layout_height="@dimen/m_120"
            android:layout_marginStart="@dimen/twenty"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/profile_image"
            android:src="@drawable/baseline_account_box_100"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_choose"
            android:layout_width="@dimen/m_100"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/thirty"
            android:backgroundTint="@color/hard_yellow"
            android:text="@string/choose"/>

    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/m_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="@string/name"
        app:boxCornerRadiusBottomEnd="@dimen/v_margin"
        app:boxCornerRadiusBottomStart="@dimen/v_margin"
        app:boxCornerRadiusTopEnd="@dimen/v_margin"
        app:boxCornerRadiusTopStart="@dimen/v_margin"
        app:endIconMode="clear_text"
        app:startIconTint="@color/teal_200">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_name"
            android:layout_width="@dimen/m_300"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/m_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="@string/phone"
        app:boxCornerRadiusBottomEnd="@dimen/v_margin"
        app:boxCornerRadiusBottomStart="@dimen/v_margin"
        app:boxCornerRadiusTopEnd="@dimen/v_margin"
        app:boxCornerRadiusTopStart="@dimen/v_margin"
        app:endIconMode="clear_text"
        app:startIconTint="@color/teal_200">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_phone"
            android:layout_width="@dimen/m_300"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="phone"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/m_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="@string/address"
        app:boxCornerRadiusBottomEnd="@dimen/v_margin"
        app:boxCornerRadiusBottomStart="@dimen/v_margin"
        app:boxCornerRadiusTopEnd="@dimen/v_margin"
        app:boxCornerRadiusTopStart="@dimen/v_margin"
        app:endIconMode="clear_text"
        app:startIconTint="@color/teal_200">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_address"
            android:layout_width="@dimen/m_300"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/m_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="@string/area"
        app:boxCornerRadiusBottomEnd="@dimen/v_margin"
        app:boxCornerRadiusBottomStart="@dimen/v_margin"
        app:boxCornerRadiusTopEnd="@dimen/v_margin"
        app:boxCornerRadiusTopStart="@dimen/v_margin"
        app:endIconMode="clear_text"
        app:startIconTint="@color/teal_200">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_area"
            android:layout_width="@dimen/m_300"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/fifty"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/v_margin"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="@dimen/m_150"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:backgroundTint="@color/hard_yellow"
        android:background="@drawable/line_10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/twenty"/>


</LinearLayout>